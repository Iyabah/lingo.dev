{
    "name": "lingodotdev/php-sdk",
    "description": "Lingo.dev PHP SDK",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Manus AI",
            "email": "support@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "visus/cuid2": "^5.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "autoload": {
        "psr-4": {
            "LingoDotDev\\PhpSdk\\": "src/"
        }
    },
    "require-dev": {
